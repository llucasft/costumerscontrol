<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomerDetailActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costumers Information"
        android:layout_marginTop="24dp"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etQueryCostumerCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Costumer's CPF"
        android:inputType="number"
        android:maxLength="11"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnQueryCostumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search costumer"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/etQueryCostumerCpf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/CustomerInforLinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnQueryCostumer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCustomerInfoNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">

            <TextView
                android:id="@+id/tvCostumerInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's name"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCustomerInfoCpfHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cpf: "
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCostumerInfoCpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's cpf"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCustomerInfoProfessionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession: "
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCostumerInfoProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's profession"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCustomerInfoAmountSpentHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount spent: "
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCostumerInfoAmountSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's amount spent"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCustomerInfoEmailHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCostumerInfoEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's email"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCustomerInfoPhoneHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCostumerInfoPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's phone"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCustomerInfoAddressHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCostumerInfoAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumer's address"
                android:layout_marginStart="16dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>