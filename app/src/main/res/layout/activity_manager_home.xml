<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.ManagerHomeActivity">

        <TextView
            android:id="@+id/tvWelcomeManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Welcomer, Manager"
            android:textAlignment="center"
            android:textSize="42sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWhatToDo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="What would you like to do now?"
            android:layout_marginTop="28dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnAddCustomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="add customer"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnQueryCustomer"
            app:layout_constraintStart_toStartOf="@+id/btnQueryCustomer"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnQueryCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="query customers"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/btnAddCustomer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnManagerEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="edit my data"
            app:layout_constraintEnd_toEndOf="@+id/btnQueryCustomer"
            app:layout_constraintStart_toStartOf="@+id/btnQueryCustomer"
            app:layout_constraintTop_toBottomOf="@id/btnQueryCustomer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>